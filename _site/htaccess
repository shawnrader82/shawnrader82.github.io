# ────────────────────────────────────────────────────────────
# 1) REWRITE ENGINE
# ────────────────────────────────────────────────────────────
RewriteEngine On


# ────────────────────────────────────────────────────────────
# 2) FORCE HTTPS
# ────────────────────────────────────────────────────────────
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]


# ────────────────────────────────────────────────────────────
# 3) FORCE WWW
# ────────────────────────────────────────────────────────────
RewriteCond %{HTTPS} on
RewriteCond %{HTTP_HOST} !^www\.mobileamericannotary\.com$ [NC]
RewriteRule ^ https://www.mobileamericannotary.com%{REQUEST_URI} [L,R=301]


# ────────────────────────────────────────────────────────────
